<%= form_for(@todo) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= f.text_field :title, placeholder: "Todo title ...", size: 40, class: 'form-control' %>
  <%= hidden_field_tag 'todo[work_id]', @work.id, params: :work_id %>
  <div class="todo-create-submit-container">
    <%= f.submit "Create Todo", class: "btn btn-sm btn-primary" %>
  </div>
<% end %>
