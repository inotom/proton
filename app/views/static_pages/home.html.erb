<% provide(:title, 'Works') if signed_in? %>
<% if signed_in? %>
  <div class="row">
    <aside class="col-md-3">
      <section>
        <%= render 'shared/user_info' %>
      </section>
    </aside>
    <div class="col-md-9">
      <section>
        <%= render 'shared/work_index', collection: @works %>
      </section>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>Welcome to the Proton.</h1>
    <p><%= link_to 'Sign up now!', signup_path, class: 'btn btn-large btn-primary' %></p>
  </div>
<% end %>
