<% provide(:title, 'Edit work') %>
<h1>Edit work</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@work) do |f| %>
      <%= render 'fields', f: f %>
      <%= f.submit "Update work", class: "btn btn-lg btn-primary" %>
    <% end %>
    <div class="page-nav">
      <%= link_to 'Back', work_path(@work) %>
    </div>
  </div>
</div>
