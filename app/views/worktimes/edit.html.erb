<% provide(:title, 'Edit worktime') %>
<h1>Edit worktime</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@worktime) do |f| %>
      <div class="times start-time">
        <%= f.label :start_time %><br>
        <%= f.datetime_select :start_time %>
      </div>
      <div class="times end-time">
        <%= f.label :end_time %><br>
        <%= f.datetime_select :end_time unless @worktime.end_time.nil? %>
      </div>
      <%= f.label :memo %>
      <%= f.text_area :memo, class: 'form-control', rows: 5 %>
      <%= f.hidden_field :work_id %>
      <%= hidden_field_tag 'mode', 'edit' %>
      <%= f.submit "Update worktime", class: "btn btn-lg btn-primary" %>
    <% end %>
    <div class="worktime-page-nav">
      <%= link_to 'Back', work_path(@work) %>
    </div>
  </div>
</div>
